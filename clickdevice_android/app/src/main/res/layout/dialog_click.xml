<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="点击命令"
    android:gravity="center"
    android:textColor="@color/blackLine"
    android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/blackLine"
            android:text="坐标"/>

        <Button
            android:id="@+id/btn_getXY"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="坐标获取"
            android:textColor="@color/blackLine"
            android:gravity="center"
            android:background="@drawable/btn_ok_dialog_sign"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/blackLine"
            android:text="X:"/>
        <EditText
            android:id="@+id/edit_X"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:maxLength="6"
            android:inputType="number"
            android:theme="@style/MyEditText"
            android:textColor="@color/blackLine"
            android:text="0" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/blackLine"
            android:text="Y:"/>
        <EditText
            android:id="@+id/edit_Y"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:maxLength="6"
            android:inputType="number"
            android:theme="@style/MyEditText"
            android:textColor="@color/blackLine"

            android:text="0" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/blackLine"
            android:text="执行时长:"/>
        <EditText
            android:id="@+id/edit_duration"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:maxLength="6"
            android:theme="@style/MyEditText"
            android:textColor="@color/blackLine"

            android:inputType="number"
            android:text="0" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_tips"
            android:layout_marginLeft="10dp"
            android:layout_width="160dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/blackLine"
            android:text="延时时长(单位ms):"/>
        <EditText
            android:id="@+id/edit_delayed"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:maxLength="6"
            android:theme="@style/MyEditText"
            android:textColor="@color/blackLine"

            android:inputType="number"
            android:text="0" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/blackLine"
            android:background="@drawable/btn_ok_dialog_sign"
            android:text="取消" />

        <Button
            android:id="@+id/btn_determine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/btn_ok_dialog_sign"
            android:textColor="#ff2222"
            android:text="确定" />
    </LinearLayout>

</LinearLayout>